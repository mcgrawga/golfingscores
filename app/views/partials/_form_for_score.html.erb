			<td class="center_content scorecard_label">8</td>
			<td class="center_content scorecard_label">9</td>
		<tr>
		<tr>
			<td class="scorecard_label">Par</td>
			<td id="par_hole_1" class="center_content scorecard_label"></td>
			<td id="par_hole_2" class="center_content scorecard_label"></td>
			<td id="par_hole_3" class="center_content scorecard_label"></td>
			<td id="par_hole_4" class="center_content scorecard_label"></td>
			<td id="par_hole_5" class="center_content scorecard_label"></td>
