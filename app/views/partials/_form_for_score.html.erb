					<%= f.text_field :score_hole_6, :class => 'form-control' %>
				</div>
			</td>
			<td>
				<div class="form-group">
					<%= f.text_field :score_hole_7, :class => 'form-control' %>
				</div>
			</td>
			<td>
				<div class="form-group">
