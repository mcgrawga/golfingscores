<%= form_for @score do |f| %>
	<div class="errors">
		<ul>
			<% @score.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<%end%>
		<ul>
	</div>


	<div class="form-group">
		<select class="form-control" id="course_select_box">
			<option value="">Select a course</option>
			<% @courses.each do |course| %>
				<option value="<%= course.id %>"><%= course.name %></option>
			<% end %>
			<option value="Add a course">...Add a course</option>
		</select>
	</div>

	<div class="form-group">
		<select class="form-control" id="tee_select_box">
		</select>
	</div>


