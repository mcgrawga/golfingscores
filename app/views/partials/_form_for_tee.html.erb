			</td>
		</tr>

		<tr>
			<td class="scorecard_label">Hole</td>
			<td class="center_content scorecard_label">10</td>
			<td class="center_content scorecard_label">11</td>
			<td class="center_content scorecard_label">12</td>
			<td class="center_content scorecard_label">13</td>
			<td class="center_content scorecard_label">14</td>
			<td class="center_content scorecard_label">15</td>
			<td class="center_content scorecard_label">16</td>
			<td class="center_content scorecard_label">17</td>
			<td class="center_content scorecard_label">18</td>
