			<td class="center_content scorecard_label">6</td>
			<td class="center_content scorecard_label">7</td>
			<td class="center_content scorecard_label">8</td>
			<td class="center_content scorecard_label">9</td>
		<tr>
		<tr>
			<td class="scorecard_label">Par</td>
			<td>
				<div class="form-group">
					<%= f.text_field :par_hole_1, :class => 'form-control' %>
				</div>
			</td>
			<td>
				<div class="form-group">
					<%= f.text_field :par_hole_2, :class => 'form-control' %>
				</div>
			</td>
			<td>
				<div class="form-group">
					<%= f.text_field :par_hole_3, :class => 'form-control' %>
				</div>
			</td>
			<td>
				<div class="form-group">
					<%= f.text_field :par_hole_4, :class => 'form-control' %>
				</div>
			</td>
			<td>
