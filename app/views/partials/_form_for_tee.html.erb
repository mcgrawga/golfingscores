		<ul>
			<% @tee.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<%end%>
		<ul>
	</div>

	<div class="form-group">
		<%= f.label :name, 'Tee name'%>
		<%= f.text_field :name, {:autofocus => true,:class => 'form-control'} %>
	</div>
	<div class="form-group">
		<%= f.label :course_rating %>
		<%= f.text_field :course_rating, :class => 'form-control' %>
	</div>
