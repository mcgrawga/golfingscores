<%= form_for @score do |f| %>
	<% if (@score.errors.full_messages.count() > 0) %>
		<div class="errors">
			<ul>
				<% @score.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<%end%>
			<ul>
		</div>
	<% end %>


	<div class="form-group" id="date_played_div" >
		<%= f.text_field :date_played, :value => @score.date_played.strftime("%m/%d/%Y"), :class => 'form-control', :placeholder => 'Select a date...', :id => 'date_played_scorecard' %>
	</div>

	<div class="form-group" id="course_select_div">
		<select class="form-control" id="course_select_box">
			<option value="">Select a course</option>
			<% @courses.each do |course| %>
				<% if @score.tee.course_id == course.id %>
					<option value="<%= course.id %>" selected><%= course.name %></option>
				<% else %>
					<option value="<%= course.id %>"><%= course.name %></option>
				<% end %>
			<% end %>
			<option value="Add a course">...Add a course</option>
		</select>
	</div>


	<div class="form-group" id="tee_select_div" >
		<select class="form-control" id="tee_select_control" name="score[tee_id]">
			<option value="">Select a tee</option>
			<% @score.tee.course.tees.each do |tee| %>
				<% if @score.tee_id == tee.id %>
					<option value="<%= tee.id %>" selected><%= tee.name %></option>
				<% else %>
					<option value="<%= tee.id %>"><%= tee.name %></option>
				<% end %>
			<% end %>
			<option value="Add a tee">...Add a tee</option>
		</select>
