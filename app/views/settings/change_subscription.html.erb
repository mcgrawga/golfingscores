				<%= button_to "Upgrade to Pro", settings_change_subscription_path(:plan_name => @high_stripe_plan), class: "btn btn-primary btn-lg", id: "change_subscription_button", role: "button" %>
			<% end %>
		</div>
	</div>

	<br style="clear: left;" />
</div>